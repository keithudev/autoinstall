<Window x:Class="autoinstall.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:autoinstall"
        mc:Ignorable="d"
        Title="autoinstall" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBlock Text="Select the apps you want to install" FontSize="20" Margin="10,10,10,10" />
        <ScrollViewer Margin="0,40,0,60">
            <WrapPanel x:Name="CategoriesPanel" Margin="10" Orientation="Horizontal" />
        </ScrollViewer>
        <Button Content="Install" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="100" Height="33" Margin="0,0,12,12" Click="InstallButton_Click"/>
    </Grid>
</Window>
